<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.TakeTrainSetActivity">

    <include layout="@layout/content_main" />

    <TextView
        android:id="@+id/frame"
        android:layout_marginTop="230dp"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/linecolor"/>

    <TextView
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:id="@+id/order"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/initOrder"/>

    <GridLayout
        android:layout_marginTop="620dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:columnCount="3"
        android:rowCount="1">

        <Button
            android:id="@+id/begin"
            android:text="@string/begin"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@color/colorMint"/>

        <Button
            android:id="@+id/pause"
            android:clickable="false"
            android:text="@string/pause"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@color/colorHalfTransparentBlack"/>

        <Button
            android:id="@+id/stop"
            android:text="@string/stop"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@color/colorBitterSweetDark"/>

    </GridLayout>


</android.support.design.widget.CoordinatorLayout>